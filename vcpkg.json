{
  "name": "opentyrian",
  "version": "2.1.20221123",
  "description": "OpenTyrian is an open-source port of the DOS game Tyrian.",
  "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg-tool/main/docs/vcpkg.schema.json",
  "dependencies": [
    {
      "name": "vcpkg-cmake",
      "host": true
    },
    {
      "name": "vcpkg-cmake-config",
      "host": true
    },
    {
      "name": "sdl2",
      "host": true
    }
  ],
  "features": {
    "midi": {
      "description": "Enable MIDI music support",
      "dependencies": [
        "midiproc",
        {
          "name": "sdl2-mixer-ext",
          "features": [
            "fluidsynth",
            {
              "name": "nativemidi",
              "platform": "(windows & !uwp) | osx"
            }
          ]
        }
      ]
    }
  },
  "default-features": [
    "midi"
  ]
}